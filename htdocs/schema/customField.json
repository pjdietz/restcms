{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "id": "#",
    "required": false,
    "properties": {
        "name": {
            "type": "string",
            "description": "Key for the custom field",
            "required": true
        },
        "value": {
            "type": "string",
            "description": "Value for the custom field",
            "required": true
        },
        "sortOrder": {
            "type": "integer",
            "description": "Arbitrary sorting field",
            "required": false,
            "default": 0,
            "minimum": 0
        },
        "articleId": {
            "type": "integer",
            "description": "Unique ID of the article this custom fields belongs to",
            "required": false,
            "readonly": true
        },
        "customFieldId": {
            "type": "integer",
            "description": "Unique ID of the customField",
            "required": false,
            "readonly": true
        }
    }
}
