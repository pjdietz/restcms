{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "id": "#",
    "required": true,
    "properties": {
        "articleId": {
            "type": "integer",
            "description": "Unique ID of the article.",
            "required": false,
            "readonly": true
        },
        "contentType": {
            "type": "string",
            "description": "Mime type of the article",
            "required": true
        },
        "status": {
            "type": "string",
            "description": "Name or URI of status",
            "required": true
        },
        "slug": {
            "type": "string",
            "description": "URL-friendly unique identifier",
            "required": true
        },
        "title": {
            "type": "string",
            "description": "Article title",
            "required": true
        },
        "originalContent": {
            "type": "string",
            "description": "Editable body content of the article.",
            "required": true
        },
        "content": {
            "type": "string",
            "description": "Processed body content of the article.",
            "required": false,
            "readonly": "true"
        },
        "excerpt": {
            "type": "string",
            "description": "Text snippet summarizing the article.",
            "required": false,
            "default": ""
        },
        "notes": {
            "type": "string",
            "description": "Private notes for the user",
            "required": false,
            "default": ""
        }
    }
}
