{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "id": "#",
    "required": false,
    "properties": {
        "articleId": {
            "type": "integer",
            "description": "Unique ID of the article",
            "required": false,
            "readonly": true
        },
        "currentVersionId": {
            "type": "integer",
            "description": "Unique ID of the version representing the current content",
            "required": false,
            "readonly": true
        },
        "status": {
            "type": "string",
            "description": "Name of status",
            "required": true
        },
        "title": {
            "type": "string",
            "description": "Article title",
            "required": true
        },
        "slug": {
            "type": "string",
            "description": "URL-friendly unique identifier",
            "required": true
        },
        "excerpt": {
            "type": "string",
            "description": "Text snippet summarizing the article",
            "required": false,
            "default": ""
        },
        "content": {
            "type": "string",
            "description": "Processed body content of the article",
            "required": false,
            "readonly": true
        },
        "originalContent": {
            "type": "string",
            "description": "Editable body content of the article.",
            "required": true
        },
        "contentType": {
            "type": "string",
            "description": "Mime type of the article",
            "required": true
        },
        "siteId": {
            "type": "integer",
            "description": "Unique ID of site the article belongs to.",
            "required": false,
            "readonly": false,
            "minimum": 1
        },
        "sitePath": {
            "type": "string",
            "description": "Relative path to the root of the article's site",
            "required": false,
            "default": ""
        },
        "notes": {
            "type": "string",
            "description": "Private notes for the user",
            "required": false,
            "default": ""
        },
        "customFields": {
            "type": "array",
            "description": "Custom fields to attach to the article",
            "required": "false",
            "items": {
                "type": "object",
                "required": false,
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Key for the custom field",
                        "required": true
                    },
                    "originalValue": {
                        "type": "string",
                        "description": "Editable value for the custom field",
                        "required": true
                    },
                    "sortOrder": {
                        "type": "integer",
                        "description": "Arbitrary sorting field",
                        "required": false,
                        "default": 0,
                        "minimum": 0
                    },
                    "value": {
                        "type": "string",
                        "description": "Processed value for the custom field",
                        "required": false,
                        "readonly": true
                    },
                    "articleId": {
                        "type": "integer",
                        "description": "Unique ID of the article this custom fields belongs to",
                        "required": false,
                        "readonly": true
                    },
                    "customFieldId": {
                        "type": "integer",
                        "description": "Unique ID of the customField",
                        "required": false,
                        "readonly": true
                    }
                }
            }
        }
    }
}
