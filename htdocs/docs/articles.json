                        {
                            "description": "The new Article",
                            "paramType": "body",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "Article"
                        }
                    ],
                    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Body is malformed or contains illegal values."
