                {
                    "httpMethod": "GET",
                    "summary": "Get a collection of versions for a given article.",
                    "nickname": "getVersions",
                    "parameters": [
                        {
                            "name": "articleId",
                            "description": "Filter by articleId",
                            "dataType": "int",
                            "required": false,
                            "allowMultiple": true,
                            "paramType": "path"
                        }
                    ]
                }
            ]
        },
