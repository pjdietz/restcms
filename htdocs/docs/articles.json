                    "summary": "Get a collection of articles",
                    "nickname": "getArticles",
                    "parameters": [
                        {
                            "name": "articleId",
                            "description": "Filter by articleId",
                            "dataType": "int",
                            "required": false,
                            "allowMultiple": true,
                            "paramType": "query"
                        },
                        {
                            "name": "slug",
                            "description": "Filter by slug",
                            "dataType": "string",
                            "required": false,
                            "allowMultiple": true,
                            "paramType": "query"
                        },
                        {
                            "name": "status",
                            "description": "Filter by status",
                            "dataType": "string",
                            "required": false,
                            "allowMultiple": true,
                            "paramType": "query"
                        }
                    ]
                },
                {
                    "httpMethod": "POST",
                    "summary": "Add a new article",
