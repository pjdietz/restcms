{
    "apiVersion": "0.0.1",
    "swaggerVersion": "1.0",
    "basePath": "http://restcms.vm2.home.local",
    "resourcePath": "/status",
    "apis": [
        {
            "path": "/status/",
            "description": "Statuses",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Read a collection of available statuses",
                    "nickname": "getStatuses",
                    "parameters": [
                        {
                            "name": "status",
                            "description": "Filter by status name",
                            "dataType": "string",
                            "required": false,
                            "allowMultiple": true,
                            "paramType": "query"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/status/{statusId}",
            "description": "One specific status",
            "operations": [
                {
                    "httpMethod": "GET",
                    "nickname": "getStatus",
                    "summary": "View details on a specific status",
                    "parameters": [
                        {
                            "name": "statusId",
                            "description": "ID for the status",
                            "dataType": "int",
                            "required": true,
                            "allowMultiple": false,
                            "paramType": "path"
                        }
                    ],
                    "errorResponses": [
                        {
                            "code": 404,
                            "reason": "Status does not exist"
                        }
                    ]
                }
            ]
        }
    ]
}
